            <div class="absolute bottom-0 w-full sm:w-auto sm:relative">
                <ul class="flex sm:gap-6 justify-between md:justify-center sm:w-4/5 w-11/12 m-auto md:gap-8">
                    <a href="/"><li class="hover:bg-yellow-900 p-2">Home</li></a>
                    <a href="/createpost"><li class="hover:bg-yellow-900 p-2">Create</li></a>
                    <a href="/profile"><li class="hover:bg-yellow-900 p-2">Profile</li></a>
                </ul>
            </div>
            <div>
                <a href="/logout" class="text-lg bg-white text-black px-3 py-1">LogOut</a>
            </div>
        </div>
        <div class="flex justify-center items-center">
            <div
                class="lg:w-5/12 md:w-8/12 border-[1px] border-zinc-800 rounded-lg sm:w-4/5 w-11/12 bg-black min-h-[50vh] max-h-auto pt-8 px-6">
                <div class="flex justify-between items-center">
                    <div>
                        <h1 class="text-xl font-bold">
                            <%= user.username %>
                        </h1>
                    </div>
                    <div>
                        <a href="/profilepic">
                            <img src="/images/<%= user.pic || 'default.jpg' %>"
                                class="rounded-full w-16 h-16 hover:opacity-60" alt="">
                        </a>
                    </div>
                </div>
                <div class="my-2">
                    bio section
                </div>
                <div class="opacity-50">
                    <h1><span class="mr-2" id="followspan"><%= Array.isArray(user.folowers) ? user.folowers.length : 0 %></span>Followers</h1>
                </div>
                <div class="my-4">
                    <button class="w-full w-4/5 border-[1px] border-zinc-800 py-1" id="followbtn"><%= isfollow ? "Unfollow" : "Follow" %></button>
                </div>
                <div class="flex justify-center items-center flex-col my-2 mt-4 gap-2">
                    <h1>Posts</h1>
                    <div class="w-full h-[1px] bg-zinc-800"></div>
                </div>
               
                <div class="my-2 mt-8 flex flex-col gap-3">
                    <% if (posts && posts.length> 0) { %>
                        <% posts.forEach(function(post) { %>
                            <div class="flex flex-col justify-start items-center w-full">

                                <div class="bg-zinc-700 w-full h-[1px]"></div>

                                <div class="flex rounded-lg w-11/12 justify-start items-center p-2 gap-4">

                                    <div>
                                        <img src="/images/<%= user.pic || 'default.jpg' %>"
                                            class="rounded-full w-10 h-10" alt="">
                                    </div>

                                    <div class="flex flex-col justify-center items-start gap-1">
                                        <h1 class="font-semibold cursor-pointer hover:underline">
                                            <%= post.username %>
                                        </h1>
                                        <p>
                                            <%= post.content %>
                                        </p>
                                    </div>

                                </div>

                                <div class="flex rounded-lg w-8/12 md:w-9/12 justify-start items-center p-2 gap-4">
                                    <h1 class="cursor-pointer hover:underline" id="likebtn-<%= post.post_id%>"
                                        data-post-id="<%= post.post_id %>">Like</h1><span class="-ml-2" id="likespan-<%= post.post_id%>">
                                            <%= Array.isArray(post.likes) ? post.likes.length : 0 %>
                                    </span>
                                    <h1 class="cursor-pointer hover:underline"><a href="comments">Comment</a></h1>
                                </div>

                            </div>
                            <% }); %>
                                <% } else { %>
                                    <h1>No posts yet.</h1>
                                    <% } %>

                </div>
            </div>
        </div>
    </div>

    <script>
        const posts = <%- JSON.stringify(posts) %>;
        const userId = <%= JSON.stringify(user.user_id) %>;
        const reqUserID = <%= JSON.stringify(uID) %>;

        document.addEventListener("DOMContentLoaded", function () {
            // Check if the user has liked each post
            posts.forEach(post => {
                let postId = post.post_id;
    
                fetch(`/check-like/${postId}`)
                    .then(response => response.json())
                    .then(data => {
                        const likeButton = document.getElementById(`likebtn-${postId}`);
                        likeButton.textContent = data.liked ? "Unlike" : "Like";
                    })
                    .catch(error => console.error('Error:', error));
            });
    
            // Attach click event listener for like buttons
            document.addEventListener('click', function (event) {
                if (event.target.matches('[id^="likebtn-"]')) { // Only target like buttons
                    const postId = event.target.getAttribute('data-post-id'); // Get post ID from the button
    
                    fetch(`/likes/${postId}`)
                        .then(response => response.json()) // Parse the JSON response
                        .then(data => {
                            const likeCountSpan = document.getElementById(`likespan-${postId}`);
                            likeCountSpan.textContent = data.likes.length; // Update the like count
    
                            // Update button text based on the new state
                            event.target.textContent = data.likes.includes(userId) ? "Unlike" : "Like"; // Adjust as necessary
                        })
                        .catch(error => console.error('Errossr:', error)); // Handle any errors
                }
            });
            
            const followbtn = document.getElementById("followbtn")
            followbtn.addEventListener("click", async function() {
                const response = await fetch(`/follow/${userId}`)
                const data = await response.json()

                // console.log("data : ", data);
                followbtn.textContent = data.followers.includes(reqUserID) ? "Unfollow" : "Follow"
                document.getElementById("followspan").textContent = data.followers.length
            })

        });
    </script>
</body>

</html>